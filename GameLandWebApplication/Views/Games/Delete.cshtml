@model GameLandWebApplication.Game

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete @Html.DisplayFor(model => model.GameName)</h1>

<h3>Are you sure you want to delete @Html.DisplayFor(model => model.GameName)?</h3>
<div>   
    <hr />
    <dl class="row">
        <dd class = "col-sm-10">
